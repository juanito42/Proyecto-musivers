{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Eventos</h1>

        <div class="row">
            {% for event in events %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        {% if event.photoFilename %}
                            <img src="/uploads/photos/{{ event.photoFilename }}" class="card-img-top" alt="{{ event.title }}">
                        {% else %}
                            <img src="/uploads/photos/default-event.jpg" class="card-img-top" alt="{{ event.title }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ event.title }}</h5>
                            <p class="card-text">{{ event.description }}</p>
                            <p class="card-text">
                                <small class="text-muted">{{ event.date|date('Y-m-d H:i') }}</small>
                            </p>

                            <!-- Mostrar la categoría del evento -->
                            <p class="card-text"><strong>Categoría:</strong> {{ event.category }}</p>

                            <div class="d-flex justify-content-between">
                                {% if event.url %}
                                    <a href="{{ event.url }}" target="_blank" class="btn btn-info">Más información</a>
                                {% endif %}
                                
                                <a href="{{ path('admin_edit_event', {id: event.id}) }}" class="btn btn-primary">Editar</a>

                                <form action="{{ path('event_delete', {id: event.id}) }}" method="POST" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este evento?');">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No hay eventos disponibles en este momento.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
