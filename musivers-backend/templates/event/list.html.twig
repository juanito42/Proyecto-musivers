{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Eventos</h1>
        <div class="row">
            {% for event in events %}
                <div class="col-md-6 col-lg-3 mb-4"> <!-- 4 columnas por fila en pantallas grandes -->
                    <div class="card h-100 shadow-sm">
                        <!-- Imagen del evento -->
                        <img 
                            src="{{ event.photoFilename ? asset('uploads/photos/' ~ event.photoFilename) : asset('uploads/photos/default-event.jpg') }}" 
                            class="card-img-top" 
                            alt="{{ event.title }}" 
                            style="object-fit: cover; height: 200px; width: 100%;">
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ event.title ?: 'Título no disponible' }}</h5>
                            <p class="card-text">{{ event.description ?: 'Descripción no disponible' }}</p>
                            <p class="card-text mt-auto">
                                <small>{{ event.date ? event.date|date('Y-m-d H:i') : 'Fecha no disponible' }}</small>
                            </p>
                            
                            <!-- Mostrar la categoría del evento -->
                            <p class="card-text">
                                <strong>Categoría:</strong> {{ event.category ?: 'Categoría no disponible' }}
                            </p>

                            <div class="d-flex justify-content-between mt-2">
                                {% if event.url %}
                                    <a href="{{ event.url }}" target="_blank" class="btn btn-info">Más información</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">No hay eventos disponibles en este momento.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
