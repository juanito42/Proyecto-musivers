{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">Crear un Nuevo Evento</h1>

        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h3 class="mb-0">Formulario de Evento</h3>
                    </div>
                    <div class="card-body p-5">
                        {{ form_start(form, {
                            'attr': {
                            'class': 'needs-validation',
                            'novalidate': 'novalidate',
                            'enctype': 'multipart/form-data'
                            },
                            'action': path('admin_create_event_form'),
                            'method': 'POST'
                        }) }}

                            <!-- Campo Título -->
                            <div class="mb-3">
                                {{ form_label(form.title, 'Título del Evento', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.title, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Escribe el título del evento'
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    Por favor, ingresa un título para el evento.
                                </div>
                            </div>

                            <!-- Campo Descripción -->
                            <div class="mb-3">
                                {{ form_label(form.description, 'Descripción del Evento', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.description, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Escribe una descripción detallada'
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    Por favor, proporciona una descripción para el evento.
                                </div>
                            </div>

                            <!-- Campo Fecha -->
                            <div class="mb-3">
                                {{ form_label(form.date, 'Fecha del Evento', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.date, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Selecciona la fecha del evento'
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    Por favor, selecciona una fecha para el evento.
                                </div>
                            </div>

                            <!-- Campo Categoría -->
                            <div class="mb-3">
                                {{ form_label(form.category, 'Categoría', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.category, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Selecciona la categoría del evento'
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    Por favor, selecciona una categoría para el evento.
                                </div>
                            </div>

                            <!-- Campo URL -->
                            <div class="mb-3">
                                {{ form_label(form.url, 'Enlace del Evento', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.url, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Ingresa el enlace del evento (opcional)'
                                    }
                                }) }}
                            </div>

                            <!-- Campo Foto (opcional) -->
                            <div class="mb-4">
                                {{ form_label(form.photo, 'Subir Foto del Evento', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.photo, {
                                    'attr': {
                                        'class': 'form-control'
                                    }
                                }) }}
                            </div>
                            <!-- Botón para Crear Evento -->
                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                Crear Evento
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
<br>
    <script>
        // Bootstrap validation for forms
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
{% endblock %}
