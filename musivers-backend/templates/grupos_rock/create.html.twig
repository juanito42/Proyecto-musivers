{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">Crear un Nuevo Grupo de Rock</h1>

        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h3 class="mb-0">Formulario de Grupo de Rock</h3>
                    </div>
                    <div class="card-body p-5">
                        {{ form_start(form, {
                            'attr': {
                                'class': 'needs-validation',
                                'novalidate': 'novalidate',
                                'enctype': 'multipart/form-data'
                            }
                        }) }}

                        <!-- Campo Nombre -->
                        <div class="mb-3">
                            {{ form_label(form.name, 'Nombre del Grupo', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.name, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Escribe el nombre del grupo'
                                }
                            }) }}
                        </div>

                        <!-- Campo Biografía -->
                        <div class="mb-3">
                            {{ form_label(form.biography, 'Biografía', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.biography, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Escribe una biografía del grupo'
                                }
                            }) }}
                        </div>

                        <!-- Campo Fecha de Formación -->
                        <div class="mb-3">
                            {{ form_label(form.formationDate, 'Fecha de Formación', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.formationDate, {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }) }}
                        </div>

                        <!-- Campo Foto -->
                        <div class="mb-3">
                            {{ form_label(form.photo, 'Foto del Grupo', { 'label_attr': { 'class': 'form-label' } }) }}
                            {{ form_widget(form.photo, {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }) }}
                        </div>

                        <button type="submit" class="btn btn-primary">Crear Grupo</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
